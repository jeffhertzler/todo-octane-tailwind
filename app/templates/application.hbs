<div class="
    bg-gray-100
    font-hairline
    h-screen
    w-full
  "
>
  <div class="max-w-xl mx-auto">
    <h1
      class="
        leading-none
        py-3
        text-7xl
        text-center
        text-red-200
      "
    >
      todos
    </h1>
    <div class="bg-white shadow">
      <div class="border-b flex items-center">
        <button
          class="
            focus:outline-none
            hocus:text-gray-700
            px-5
            text-gray-400
            text-2xl
          "
        >
          <span class="inline-block rotate-90">‚ùØ</span>
        </button>
        <input
          placeholder="What needs to be done?"
          class="
            font-hairline
            outline-none
            px-2
            py-4
            placeholder-gray-400
            text-2xl
            w-full
          "
        >
      </div>
      <div>
        {{#each @model as |todo|}}
          <Todo
            @isComplete={{todo.isComplete}}
            @text={{todo.text}}
          />
        {{/each}}
      </div>
      <div class="
          flex
          items-center
          justify-between
          px-4
          py-2
          text-gray-400
          text-sm
        "
      >
        <div class="w-1/4">1 item left</div>
        <div
          class="
            flex
            flex-grow
            items-center
            justify-center
            leading-none
          "
        >
          <button
            class="
              appearance-none
              border
              border-red-300
              focus:outline-none
              hocus:border-red-200
              mx-1
              px-2
              py-1
              rounded
            "
          >
            All
          </button>
          <button
            class="
              appearance-none
              border
              border-transparent
              focus:outline-none
              hocus:border-red-200
              mx-1
              px-2
              py-1
              rounded
            "
          >
            Active
          </button>
          <button
            class="
              appearance-none
              border
              border-transparent
              focus:outline-none
              hocus:border-red-200
              mx-1
              px-2
              py-1
              rounded
            "
          >
            Completed
          </button>
        </div>
        <button
          class="
            appearance-none
            focus:outline-none
            hocus:underline
            text-right
            w-1/4
          "
        >
          Clear Completed (1)
        </button>
      </div>
    </div>
  </div>
</div>